<article id="house-gallery">

    <div class="container">

        <div id="carouselOverlay" class="carousel" data-interval="false">
            <i id="closeCarousel" class="fas fa-times"></i>
            <div class="carousel-inner">
                {{#each houseInfo.images}}
                <div class="carousel-item">
                    <img  class="img-fluid" src="/public/upload/{{filename}}" alt="Slide {{@index}}">
                </div>
                {{/each}}
            </div>
            <a id="overlayLeft" class="house-carousel-prevControl" href="#carouselOverlay" role="button" data-slide="prev">
                <i class="fas fa-chevron-left"></i>
                <span class="sr-only">Previous</span>
            </a>
            <a id="overlayRight" class="house-carousel-nextControl" href="#carouselOverlay" role="button" data-slide="next">
                <i class="fas fa-chevron-right"></i>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="text-center">
            <h4>{{houseInfo.title}}</h4>
            <hr>
        </div>

        <div class="card">
            <div class="card-header">
                <div id="galleryCarousel" class="carousel slide" data-interval="false" data-touch="false">
                    <div class="carousel-inner">
                        {{#each houseInfo.images}}
                        <div class="carousel-item">
                            <img data-target="#carouselOverlay" data-slide-to="{{@index}}" class="d-block w-100" src="/public/upload/{{filename}}" alt="Slide {{@index}}">
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div id="customGalleryCarousel">
                    <div id="img-container">
                        <div class="arrow-left">
                            <i class="fas fa-chevron-left"></i>
                        </div>
                        <div class="arrow-right">
                            <i class="fas fa-chevron-right"></i>
                        </div>
                        {{#each houseInfo.images}}
                        <div class="carousel-img-container">
                            <img data-target="#galleryCarousel" data-slide-to="{{@index}}"
                                src="/public/upload/{{filename}}" alt="imagen {{filename}}" class="img-fluid">
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>

    </div>
</article>