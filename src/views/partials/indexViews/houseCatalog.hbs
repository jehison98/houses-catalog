<article id="houses-catalog">
    <div class="container">
        <h2 class="text-center">Escoge la que más te agrade</h2>
        <hr>

        <div class="row">
            {{#each fullInfoHouses}}
            <section class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card">

                    <div class="card-header">
                        <div id="carouselHousesCatalog{{@index}}" class="carousel slide catalog-carousel"
                            data-ride="carousel">
                            <ol class="carousel-indicators">
                                {{#each images}}
                                <li data-target="#carouselHousesCatalog{{@../index}}" data-slide-to="{{@index}}"></li>
                                {{/each}}
                            </ol>
                            <div class="carousel-inner">
                                {{#each images}}
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="/public/upload/{{filename}}" alt="slide {{@index}}">
                                </div>
                                {{/each}}

                            </div>
                            <a class="house-carousel-prevControl" href="#carouselHousesCatalog{{@index}}" role="button"
                                data-slide="prev">
                                <i class="fas fa-chevron-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="house-carousel-nextControl" href="#carouselHousesCatalog{{@index}}" role="button"
                                data-slide="next">
                                <i class="fas fa-chevron-right"></i>
                                <span class="sr-only">Next</span>
                            </a>

                        </div>
                    </div>

                    <div class="card-body">
                        <a href="/houses/{{_id}}">
                            <h5 class="card-title">{{title}}</h5>
                        </a>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <div class="house-details">
                                    <i class="fas fa-home"></i>
                                    <span>{{meters}} ㎡</span>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="house-details">
                                    <i class="fas fa-bath"></i>
                                    <span>{{baths}}</span>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="house-details">
                                    <i class="fas fa-bed"></i>
                                    <span>{{rooms}}</span>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <div class="card-footer text-center">
                        <a href="/houses/{{_id}}">
                            <button class="btn w-100">Ver Detalles</button>
                        </a>
                    </div>

                </div>
            </section>
            {{/each}}
        </div>

    </div>
</article>